<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>URL Shortener</title>
  <style>
    :root {
      --bg-color: #f4f4f9;
      --text-color: #333;
      --link-color: #3498db;
      --button-bg: #3498db;
      --button-text: #fff;
      --card-bg: #fff;
      --table-header-bg: #3498db;
      --table-header-text: #fff;
      --box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    [data-theme="dark"] {
      --bg-color: #1f1f1f;
      --text-color: #f1f1f1;
      --link-color: #82cfff;
      --button-bg: #82cfff;
      --button-text: #000;
      --card-bg: #2b2b2b;
      --table-header-bg: #333;
      --table-header-text: #82cfff;
      --box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.1);
    }

    body {
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      background-color: var(--bg-color);
      color: var(--text-color);
      margin: 0;
      padding: 0;
      transition: background-color 0.3s, color 0.3s;
    }

    h2 {
      text-align: center;
      margin: 20px 0;
      color: var(--text-color);
    }

    .mode-toggle {
      position: absolute;
      top: 20px;
      right: 20px;
      background-color: var(--button-bg);
      color: var(--button-text);
      border: none;
      padding: 10px 20px;
      border-radius: 20px;
      cursor: pointer;
      transition: background-color 0.3s, color 0.3s;
    }

    .mode-toggle:hover {
      filter: brightness(1.2);
    }

    form {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 10px;
      margin: 20px auto;
      padding: 20px;
      background: var(--card-bg);
      box-shadow: var(--box-shadow);
      border-radius: 8px;
      max-width: 500px;
      width: 90%;
    }

    label {
      font-weight: bold;
    }

    input[type="text"] {
      padding: 10px;
      font-size: 16px;
      width: 100%;
      border: 1px solid #ddd;
      border-radius: 4px;
      color: var(--text-color);
      background-color: var(--card-bg);
    }

    button {
      padding: 10px 20px;
      font-size: 16px;
      background-color: var(--button-bg);
      color: var(--button-text);
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s, color 0.3s;
    }

    button:hover {
      filter: brightness(1.2);
    }

    .generated-link {
      text-align: center;
      margin: 20px auto;
      padding: 10px;
      background: #dff0d8;
      border: 1px solid #d6e9c6;
      color: #3c763d;
      border-radius: 8px;
      max-width: 500px;
      width: 90%;
    }

    .generated-link a {
      color: var(--link-color);
      font-weight: bold;
      text-decoration: none;
    }

    table {
      border-collapse: collapse;
      width: 90%;
      margin: 20px auto;
      background: var(--card-bg);
      box-shadow: var(--box-shadow);
      border-radius: 8px;
      overflow: hidden;
    }

    table th,
    table td {
      padding: 12px 15px;
      text-align: left;
      border-bottom: 1px solid #ddd;
      color: var(--text-color);
    }

    table th {
      background: var(--table-header-bg);
      color: var(--table-header-text);
      font-weight: bold;
    }

    table tr:hover {
      background-color: rgba(255, 255, 255, 0.1);
    }
  </style>
</head>
<body data-theme="light">
  <button class="mode-toggle" id="mode-toggle">Switch to Dark Mode</button>

  <h2>URL Shortener</h2>

  <% if (locals.id) { %>
    <div class="generated-link">
      <p>URL GENERATED: <a target="_blank" href="/url/<%= id %>">https://localhost/url/<%= id %></a></p>
    </div>
  <% } %>

  <form method="post" action="/url">
    <label for="longUrl">Enter Your Original URL:</label>
    <input type="text" name="url" placeholder="https://example.com" />
    <button type="submit">Generate</button>
  </form>

  <% if (locals.urls) { %>
    <table>
      <thead>
        <tr>
          <th>S.No</th>
          <th>ShortID</th>
          <th>Redirect</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% urls.forEach((url, index) => { %>
          <tr>
            <td data-label="S.No"><%= index + 1 %></td>
            <td data-label="ShortID"><%= url.shortId %></td>
            <td data-label="Redirect"><a target="_blank" href="<%= url.redirectURL %>"><%= url.redirectURL %></a></td>
            <td data-label="Clicks"><%= url.visitHistory.length %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } %>

  <script>
    const modeToggle = document.getElementById('mode-toggle');
    const body = document.body;

    // Set up event listener
    modeToggle.addEventListener('click', () => {
      if (body.dataset.theme === 'dark') {
        body.dataset.theme = 'light';
        modeToggle.textContent = 'Switch to Dark Mode';
      } else {
        body.dataset.theme = 'dark';
        modeToggle.textContent = 'Switch to Light Mode';
      }
    });
  </script>
</body>
</html>
