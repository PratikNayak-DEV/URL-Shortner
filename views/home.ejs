<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>URL Shortener</title>
  <style>
    /* General styles */
    body {
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      background-color: #f4f4f9;
      color: #333;
    }

    h2 {
      text-align: center;
      margin: 20px 0;
      color: #2c3e50;
    }

    form {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 10px;
      margin: 20px auto;
      padding: 20px;
      background: #ffffff;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      max-width: 500px;
      width: 90%;
    }

    label {
      font-weight: bold;
      color: #2c3e50;
    }

    input[type="text"] {
      padding: 10px;
      font-size: 16px;
      width: 100%;
      border: 1px solid #ddd;
      border-radius: 4px;
    }

    button {
      padding: 10px 20px;
      font-size: 16px;
      background-color: #3498db;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    button:hover {
      background-color: #2980b9;
    }

    .generated-link {
      text-align: center;
      margin: 20px 0;
      padding: 10px;
      background: #dff0d8;
      border: 1px solid #d6e9c6;
      color: #3c763d;
      border-radius: 8px;
    }

    .generated-link a {
      color: #3c763d;
      font-weight: bold;
      text-decoration: none;
    }

    table {
      border-collapse: collapse;
      width: 90%;
      margin: 20px auto;
      background: #ffffff;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      overflow: hidden;
    }

    table th,
    table td {
      padding: 12px 15px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    table th {
      background: #3498db;
      color: #ffffff;
      font-weight: bold;
    }

    table tr:hover {
      background-color: #f1f1f1;
    }

    @media (max-width: 600px) {
      table th, table td {
        font-size: 12px;
        padding: 10px;
      }

      table thead {
        display: none;
      }

      table, table tr, table td {
        display: block;
        width: 100%;
      }

      table tr {
        margin-bottom: 15px;
        background: #ffffff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1);
      }

      table td {
        text-align: right;
        padding-left: 50%;
        position: relative;
      }

      table td::before {
        content: attr(data-label);
        position: absolute;
        left: 10px;
        text-align: left;
        font-weight: bold;
      }
    }
  </style>
</head>
<body>
  <h2>URL Shortener</h2>

  <% if (locals.id) { %>
    <div class="generated-link">
      <p>URL GENERATED: <a target="_blank" href="/url/<%= id %>">https://localhost/url/<%= id %></a></p>
    </div>
  <% } %>

  <form method="post" action="/url">
    <label for="longUrl">Enter Your Original URL:</label>
    <input type="text" name="url" placeholder="https://example.com" />
    <button type="submit">Generate</button>
  </form>

  <% if (locals.urls) { %>
    <table>
      <thead>
        <tr>
          <th>S.No</th>
          <th>ShortID</th>
          <th>Redirect</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% urls.forEach((url, index) => { %>
          <tr>
            <td data-label="S.No"><%= index + 1 %></td>
            <td data-label="ShortID"><%= url.shortId %></td>
            <td data-label="Redirect"><a target="_blank" href="<%= url.redirectURL %>"><%= url.redirectURL %></a></td>
            <td data-label="Clicks"><%= url.visitHistory.length %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } %>
</body>
</html>
